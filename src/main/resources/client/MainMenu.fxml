<?xml version="1.0" encoding="UTF-8"?>

<!--This file contains all the UI elements which we want to load to the window initially. Some of the elements will contain
corresponding methods which will be invoked in the java class specified in tag fx:controller -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spanish_inquisition.battleship.client.MainMenuController">
   <prefWidth>900</prefWidth>
   <prefHeight>500</prefHeight>
   <center>
      <VBox fx:id="centralVBox" alignment="CENTER" visible="false" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="playerNameVBox">
               <children>
                  <TextField fx:id="nameTextField" maxWidth="150.0" onAction="#onNameTextFieldEntered" promptText="Enter your name" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Button fx:id="featureButton" mnemonicParsing="false" onAction="#onFeatureButtonClicked" prefHeight="20.0" prefWidth="20.0" />
               </children>
            </VBox>
            <HBox fx:id="gameHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="playersVBox" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label fx:id="playersLabel" />
                        <GridPane fx:id="playersGridPane" alignment="CENTER" VBox.vgrow="ALWAYS">
                        </GridPane>
                     </children>
                  </VBox>
                  <VBox fx:id="opponentsVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label fx:id="opponentsLabel" text="Label" />
                        <GridPane fx:id="opponentsGridPane" alignment="CENTER" VBox.vgrow="ALWAYS">
                        </GridPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="gameStatusLabel" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
